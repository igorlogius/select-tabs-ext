{
  "author": "igorlogius",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "theme_icons": [
      {
        "light": "dark-256.png",
        "dark": "light-256.png",
        "size": 256
      },
      {
        "light": "dark-128.png",
        "dark": "light-128.png",
        "size": 128
      },
      {
        "light": "dark-64.png",
        "dark": "light-64.png",
        "size": 64
      },
      {
        "light": "dark-32.png",
        "dark": "light-32.png",
        "size": 32
      },
      {
        "light": "dark-16.png",
        "dark": "light-16.png",
        "size": 16
      }
    ]
  },
  "icons": {
	  "512": "icon.png"
  },
  "manifest_version": 2,
  "name": "Select Tabs Advanced",
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "menus",
    "notifications",
    "<all_urls>"
  ],
  "version": "1.1.0"
}
